\newdimen\lablen
\newdimen\spclen

\renewcommand\descriptionlabel[1]{%
  \hspace\labelsep
  \settowidth\lablen{\texttt{#1}}
  \def\@C{}
  \ifnum\@listdepth=1\def\@C{\color{blue}}\fi
  \ifnum\@listdepth=2\def\@C{\color{cyan}}\fi
  \ifdim\lablen<2em
    \texttt{\@C#1}\spclen=1em\addtolength{\spclen}{-\lablen}\hspace{\spclen}
  \else 
    \texttt{\@C#1}\hfill\break
  \fi}
        
